<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBreadCumTitle"
        style="@style/BlackSubTitleTextColor12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/_1sdp"
        android:text="@string/strength_check_text"
        android:textColor="@color/textColorBlackBold"
        android:textSize="@dimen/_10ssp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/breadCumRight"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/ivBreadCumIcon"
            android:background="@color/colorLightGrey_2" />

        <View
            android:id="@+id/breadCumLeft"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/ivBreadCumIcon"
            android:background="@color/colorLightGrey_2" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBreadCumIcon"
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/_4sdp"
            app:srcCompat="@drawable/ic_status_pending" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBreadCumValue"
        style="@style/SubTitleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/pending_text"
        android:textColor="@color/textColorBlackBold"
        android:textSize="@dimen/_10ssp" />

</LinearLayout>
