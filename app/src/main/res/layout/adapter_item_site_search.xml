<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="adapterItem"
            type="com.sisindia.ai.android.room.entities.SiteEntity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_square_ripple"
        android:layout_margin="@dimen/_8sdp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/TitleNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_4sdp"
            android:text="@{adapterItem.siteName}" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/SubTitleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{adapterItem.siteCode}" />
    </LinearLayout>

</layout>